<%= form_for(@job) do |f| %>
  <% if @job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% @job.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :abroad %><br />
    <%= f.check_box :abroad %>
  </div>
  <div class="field">
    <%= f.label :filled %><br />
    <%= f.check_box :filled %>
  </div>
  <div class="field">
    <%= f.label :cancelled %><br />
    <%= f.check_box :cancelled %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br />
    <%= f.date_select :start_date %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br />
    <%= f.date_select :end_date %>
  </div>
  <div>
    <h2>Address</h2>
    <%= fields_for(@job.address) do |u| %>
      <%= u.hidden_field :addressable_id %>
      <%= u.hidden_field :addressable_type %>
      <div class="field">
        <%= u.label :line1 %><br />
        <%= u.text_field :line1 %>
      </div>
      <div class="field">
        <%= u.label :line2 %><br />
        <%= u.text_field :line2 %>
      </div>
      <div class="field">
        <%= u.label :city %><br />
        <%= u.text_field :city %>
      </div>
      <div class="field">
        <%= u.label :postcode %><br />
        <%= u.text_field :postcode %>
      </div>
      <div class="field">
        <%= u.label :country %><br />
        <%= u.text_field :country %>
      </div>
    <% end %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
